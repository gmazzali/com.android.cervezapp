<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.android.guia3.view.screen.EditContactActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/fotoBarEdicionLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/barFotoEdicionImageView"
                android:layout_width="@dimen/edicion.bar.activity.foto.witdh"
                android:layout_height="@dimen/edicion.bar.activity.foto.height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/edicion.bar.activity.foto.content"
                android:scaleType="fitCenter"
                android:src="@drawable/leprechaun_drunk_icon" />

            <Button
                android:id="@+id/barFotoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/barFotoEdicionImageView"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/cam2_2"
                android:ems="10"
                android:onClick="ejecutarCambioDeFotoDeBar"
                android:text="@string/edicion.bar.activity.boton.sacar.foto" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/barNameEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edicion.bar.activity.field.name"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/barAddressEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edicion.bar.activity.field.address"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/barEmailEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edicion.bar.activity.field.email"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/barTelephoneEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edicion.bar.activity.field.telephone"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <CheckBox
                    android:id="@+id/barFumadorCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:hint="@string/edicion.bar.activity.field.fumador"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <Button
                    style="@android:attr/buttonBarStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:onClick="guardarBar"
                    android:text="@string/edicion.bar.activity.button.accept" />

                <Button
                    style="@android:attr/buttonBarStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:onClick="cancelarBar"
                    android:text="@string/edicion.bar.activity.button.cancel" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>