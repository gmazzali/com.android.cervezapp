<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    tools:context="com.android.cervezapp.view.MainActivity" >

    <LinearLayout
        android:id="@+id/layoutFotoPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/fotoPerfilPrincipalImageView"
            android:layout_width="@dimen/main.activity.foto.perfil.witdh"
            android:layout_height="@dimen/main.activity.foto.perfil.height"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/pantalla.principal.activity.foto.content"
            android:scaleType="fitCenter"
            android:src="@drawable/leprechaun_drunk_icon" />

        <Button
            android:id="@+id/buscarBaresButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/search"
            android:ems="10"
            android:onClick="listarBares"
            android:text="@string/pantalla.principal.activity.boton.buscar.bares" />

        <Button
            android:id="@+id/baresButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/beer_clink"
            android:ems="10"
            android:onClick="listarComentarios"
            android:text="@string/pantalla.principal.activity.boton.bares" />
    </LinearLayout>

</RelativeLayout>