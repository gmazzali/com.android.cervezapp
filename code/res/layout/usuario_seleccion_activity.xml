<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.cervezapp.view.screen.UsuarioSeleccionActivity" >

    <ListView
        android:id="@+id/usuarioListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/botonesIngresoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/usuarioListView"
        android:orientation="vertical" >

        <Button
            android:id="@+id/editarUsuarioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:onClick="modificarUsuario"
            android:text="@string/seleccion.usuario.activity.button.modify" />

        <Button
            android:id="@+id/ingresarSistemaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ingresarSistema"
            android:text="@string/seleccion.usuario.activity.button.login" />
    </LinearLayout>

</RelativeLayout>